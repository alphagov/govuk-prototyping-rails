<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %> - GOV.UK</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>
    <%= yield :head %>

    <% if content_for?(:description) %>
      <meta name="description" content="<%= yield :description %>" />
    <% end %>
  </head>
  <body class="<%= yield :body_class %>">

  <div id="wrapper">
    <%= yield %>
  </div>

  </body>
</html>
